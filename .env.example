# =============================================================================
# Chiron - Configuration
# =============================================================================
# Copier ce fichier vers .env et remplir les valeurs

# -----------------------------------------------------------------------------
# LLM Providers
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
MISTRAL_API_KEY=...

# -----------------------------------------------------------------------------
# PDF Parser
# -----------------------------------------------------------------------------
# Type de parser: pdfplumber (gratuit, local) ou mistral_ocr (cloud, payant)
PDF_PARSER_TYPE=pdfplumber

# Pour Mistral OCR uniquement
MISTRAL_OCR_API_KEY=...
MISTRAL_OCR_MODEL=mistral-ocr-latest
MISTRAL_OCR_COST_PER_1000_PAGES=2.0

# Default provider
DEFAULT_PROVIDER=anthropic

# -----------------------------------------------------------------------------
# API Backend
# -----------------------------------------------------------------------------
CHIRON_API_HOST=127.0.0.1
CHIRON_API_PORT=8000

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
DB_PATH=data/db/chiron.duckdb
